<div class='custom-system-form-field'>
    <label for='numberFieldLabel'>{{localize 'CSB.ComponentProperties.InputComponent.Label'}}</label>
    <input id='numberFieldLabel' type='text' data-key='label' value='{{label}}' />
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldSize'>{{localize 'CSB.ComponentProperties.Size.SectionTitle'}}*</label>
    <select id='numberFieldSize' data-key='size'>
        {{selectOptions COMPONENT_SIZES selected=size localize=true}}
    </select>
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldAllowDecimal'>{{localize 'CSB.ComponentProperties.NumberField.AllowDecimal'}}</label>
    <input type='checkbox' id='numberFieldAllowDecimal' data-key='allowDecimal' {{checked allowDecimal}} />
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldMinVal'>{{localize 'CSB.ComponentProperties.NumberField.MinValue'}}
        {{> icon-formula}}
    </label>
    <input id='numberFieldMinVal' type='text' data-key='minVal' value='{{minVal}}' />
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldMaxVal'>{{localize 'CSB.ComponentProperties.NumberField.MaxValue'}}
        {{> icon-formula}}
    </label>
    <input id='numberFieldMaxVal' type='text' data-key='maxVal' value='{{maxVal}}' />
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldValue'>Default value
        {{> icon-formula}}
        {{> icon-info title=(localize "CSB.ComponentProperties.AllowFormulaCreateTimeOnly")}}
    </label>
    <input id='numberFieldValue' type='text' data-key='defaultValue' value='{{defaultValue}}' />
</div>

<div class='custom-system-form-field'>
    <label for='numberFieldAllowRelative'>{{localize 'CSB.ComponentProperties.NumberField.AllowRelativeModification'}}
        {{> icon-info title=(localize "CSB.ComponentProperties.NumberField.AllowRelativeModificationDescription")}}
    </label>
    <input type='checkbox' id='numberFieldAllowRelative' data-key='allowRelative' {{checked allowRelative}} />
</div>
<div class='custom-system-form-field'>
    <label for='numberFieldShowControls'>{{localize 'CSB.ComponentProperties.NumberField.ShowFieldControls'}}
        {{> icon-info title=(localize "CSB.ComponentProperties.NumberField.ShowFieldControlsDescription")}}
    </label>
    <input type='checkbox' id='numberFieldShowControls' data-key='showControls' {{checked showControls}} />
</div>
<div class='custom-system-form-field'>
    <label for='numberFieldControlsStyle'>{{localize
            'CSB.ComponentProperties.NumberField.ControlStyle.SectionTitle'
        }}*</label>
    <select id='numberFieldControlsStyle' data-key='controlsStyle'>
        {{selectOptions NUMBER_FIELD_CONTROLS_STYLES selected=controlsStyle localize=true}}
    </select>
</div>
<div class='custom-system-form-field'>
    <label for='numberFieldInputStyle'>{{localize
            'CSB.ComponentProperties.NumberField.DisplayStyle.SectionTitle'
        }}*</label>
    <select id='numberFieldInputStyle' data-key='inputStyle'>
        {{selectOptions NUMBER_FIELD_INPUT_STYLES selected=inputStyle localize=true}}
    </select>
</div>